class HeaderComponent extends React.Component {
  constructor() {
    super();
    this.state = {
      open: false
    };
  }

  render() {
    const classNames = [
      'c-header',
      this.props.small ? '-small' : '',
      this.props.dark ? '-dark' : '',
    ];

    return (
      <div className={classNames.join(' ')}>
        <div className="wrapper">
          <div className="content">
            <a className="logo" href="#">
              <img src="<%= asset_path('preplogo@2x.png') %>" alt="Preparedness for Resilience" />
            </a>
            <button
              type="button"
              className={['navbar-toggle', this.state.open ? 'is-active' : ''].join(' ')}
              onClick={() => this.setState({ open: !this.state.open })}
            >
              <span></span>
            </button>
            <nav className={['navbar', this.state.open ? '-open' : ''].join(' ')} >
              <ul className="links">
                <li className="link"><a href="#">Data</a></li>
                <li className="link"><a href="#">Dashboards</a></li>
                <li className="link"><a href="#">Insights</a></li>
                <li className="link separator"></li>
                <li className="link -secondary"><a href="#">Search</a></li>
                <li className="link -secondary"><a href="#">English</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    );
  }
}

HeaderComponent.propTypes = {
  /**
   * Define the size of the header
   * Accepted values:
   * 	- true:  make the header smaller
   * 	- false: keep the header size
   * Default: false
   */
  small: React.PropTypes.bool,
  /**
   * Define the background type of the header
   * Accepted values:
   * 	- true:  add the dark background color
   * 	- false: keep the header transpararent color
   * Default: false
   */
  dark: React.PropTypes.bool,
};
